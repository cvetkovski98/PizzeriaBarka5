@model PicerijaBarka5.Models.Pizza
@using PicerijaBarka5.Models
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Model.getPrice()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>

        <dd>
            @{
                foreach (var typeOfIngredient in Enum.GetValues(typeof(IngredientTypeEnum.IngredientType)))
                {
                    <strong>@typeOfIngredient.ToString(): </strong>
                    foreach (var ingredient in Model.Ingredients)
                    {
                        if (ingredient.IngredientType.ToString() == typeOfIngredient.ToString())
                        {
                            <span>@ingredient.Name</span>
                        }
                    }
                    <br />
                }
            }

        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PizzaId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
