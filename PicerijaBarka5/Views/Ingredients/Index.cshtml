@model IEnumerable<PicerijaBarka5.Models.Dtos.IngredientDto>

@{
    ViewBag.Title = "Index";
}
<section style="margin-top: 80px"></section>
<h1 class="mx-0">Ingredients</h1>

<table class="table table-striped table-hover mt-3">
    <thead class="bg-dark text-white font-weight-bold">
        <tr>
            <th>
                #
            </th>
            <th>
                Name
            </th>
            <th>
                Quantity in small pizza in grams
            </th>
            <th>
                Price per kilogram
            </th>
            <th>
                Quantity in stock
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int j = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @j
                    </td>
                    <td>
                        <span>@Html.DisplayFor(modelItem => item.Name)</span>
                    </td>
                    <td>
                        <span>@Html.DisplayFor(modelItem => item.QuantityPerSmallPizza)</span>
                    </td>
                    <td>
                        <span>@item.Price</span>
                    </td>
                    <td>
                        <span>@item.QuantityInStock</span>
                    </td>
                    <td>
                        <a href="#"><i class="fas fa-pen"></i></a>
                        <span>
                            <i class="fas fa-clipboard-list" id="info"></i>
                        </span>
                        <span class="deleteIngredient" ingredient-id ="@item.IngredientId">
                            <i class="fa fa-times" id="delete"></i>
                        </span>

                        @Html.ActionLink("Edit", "Edit", new { id = item.IngredientId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IngredientId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IngredientId })
                    </td>
                </tr>
                j++;
            }
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#ordersTable");
            $(".deleteIngredient").click(function () {
                var button = $(this);
                console.log(button);

                $.ajax({
                    method: "POST",
                    url: "Ingredients/Delete",
                    data: {id: button.attr("ingredient-id")},
                    success: function () {
                        button.parents("tr").remove().draw();
                    },
                    type: "application/json"
                });
            });

        });
    </script>
}
