@model PicerijaBarka5.Models.UserToRoleModel
@using PicerijaBarka5.Models
@using PicerijaBarka5.Services
@{
    var roles = UserRoles.GetRoles();
    var users = Repository.GetInstance().GetUsers();
    ViewBag.Title = "AddUserToRole";
}


<h2>AddUserToRole</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
<div class="col-md-6">

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.DropDownListFor(m => m.Email, new SelectList (users, "Email", "Email"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.Role, new SelectList (roles), new { @class = "form-control" })
    </div>
    <div class="col-md-3">
        <button type="submit" class="form-control">Submit</button>
    </div>
</div>
    }

