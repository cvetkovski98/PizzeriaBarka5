@model PicerijaBarka5.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



<section style="margin-top: 80px">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="card w-50 bg-dark mx-auto" style="margin-top: 100px;">
            <div class="card-footer text-orange font-weight-bold text-uppercase text-center">
                <h3>Register</h3>
            </div>

            <div class="card-body text-white font-weight-bold bg-dark w-75 mx-auto p-0 pt-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    <div class="row w-100 mx-auto">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Please enter your email" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    <div class="row w-100 mx-auto">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-12", @placeholder = "Please enter your password" })
                    </div>
                </div>
                <div class="form-group pb-4">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    <div class="row w-100 mx-auto">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Please confirm your password" })
                    </div>
                </div>
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
            <div class="card-footer">
                <input type="submit" class="btn btn-block col-md-2 bg-orange text-white font-weight-bold ml-auto mr-5" value="Register" />
            </div>
        </div>
    }
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
