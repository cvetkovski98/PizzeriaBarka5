@model IEnumerable<PicerijaBarka5.Models.PizzaOrder>
@{
    ViewBag.Title = "Index";
}

<h2>Order</h2>

    <table class="table">
        <tr>
            <th>
                User
            </th>
            <th>
                Price
            </th>
            <th>
                Products
            </th>
            <th></th>
        </tr>

        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @Html.Display(order.User.UserName)
                </td>
                <td>
                    @order.Items.Sum(x => x.Pizza.getPrice())
                </td>
                <td>
                    @{ 
                        foreach (var pizza in order.Items)
                        {
                            <p>@pizza.Pizza.Name</p>
                        }
                    }
                </td>
                <td>
                    <a href="@Url.Action("Details", "Order", new { id = order.OrderId })">View order details</a>
                </td>
            </tr>
        }

    </table>




